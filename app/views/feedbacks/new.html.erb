<%= form_for @feedback do |f| %>
  <% if @feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>
      <ul>
      <% @feedback.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :product_rating, "Avaliação do Produto" %>
    <%= f.number_field :product_rating, in: 1..5 %>
  </div>

  <div>
    <%= f.label :service_rating, "Avaliação do Serviço" %>
    <%= f.number_field :service_rating, in: 1..5 %>
  </div>

  <div>
    <%= f.label :comment, "Comentário" %>
    <%= f.text_area :comment %>
  </div>

  <div>
    <%= f.submit "Enviar Feedback" %>
  </div>
<% end %>
