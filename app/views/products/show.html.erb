<div class="product-details">
        <h1 class="mb-4"><%= @product.name %></h1>
        <% if @product.image && @product.image.attached? %>
        <%= cl_image_tag(url_for(@product.image), class: "img-fluid mb-4", alt: "#{@product.name}") %>
         <% end %>
        <p><strong>Preço:</strong> R$<%= @product.price %></p>

        <p><strong>Descrição:</strong> <%= @product.description %></p>
        <%= button_to 'Comprar agora', orders_path(product_id: @product.id), method: :post %>


 </div>
