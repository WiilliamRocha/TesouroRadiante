<h1>All Products</h1>
<div class="container mt-5">
  <h1 class="mb-4">Lista de Produtos</h1>

  <%= link_to 'Novo Produto', new_product_path, class: 'btn btn-primary mb-3' %>

  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to product.name, product %></h5>
            <p class="card-text">Preço: <%= product.price %></p>
            <p class="card-text">Descrição: <%= product.description.truncate(80) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
